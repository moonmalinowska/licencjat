<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <%= render template: "layouts/menu" %>

</div>
<br/>
<div class="container">
  <div class="col-md-9 col-sm-7">
    <div class="jumbotron">

        <%= simple_form_for @proposition, :html => { :class => "form-horizontal" } do |f| %>
            <fieldset>
              <legend>Twoja propozycja atrakcji</legend>
              <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Imię/nick</label>

                <div class="col-lg-10">
                  <%= f.text_field :name, required: false, class: "form-control", id: "inputName", placeholder: "Twoje imię...", type: "text" %>

                </div>
              </div>
              <div class="form-group ">
                <label for="inputEmail" class="col-lg-2 control-label">E-mail</label>

                <div class="col-lg-10">
                  <%= f.text_field :email, required: true, class: "form-control", id: "inputEmail", placeholder:
                                                 "Twój e-mail...", type: "text" %>


                </div>
              </div>
              <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">Treść</label>

                <div class="col-lg-10">
                  <%= f.text_area :message, rows: '3', class: 'form-control', min: 10, id: "textArea",
                                  placeholder: "Wpisz propozycję atrakcji...", required: true %>

                  <span class="help-block">Twoja wiadomość powinna zawierać więcej niż 10 znaków.</span>
                </div>
              </div>
              <div class="form-group">
                <label for="inputUrl" class="col-lg-2 control-label">Adres źródła</label>

                <div class="col-lg-10">
                  <%= f.text_field :url, required: true, class: "form-control", id: "inputUrl", placeholder: "Adres strony źródłowej...", type: "text" %>

                </div>
              </div>
              <div class="form-action  pull-right">
                <div class="col-lg-10 col-lg-offset-2 visible-lg-inline">

                  <%= button_to "Wyślij", 'propositions#create', :class => "btn btn-success", :method =>
                                                         :get %>


                </div>
              </div>
            </fieldset>
        <% end %>

    </div>
  </div>

  <div class="col-md-3 col-xs-5 ">
    <%= render template: "layouts/right-side" %>
  </div>

</div>

<%= link_to 'Back', attractions_path %>
</div>
<div class="container-fluid">
  <%= render template: "layouts/footer" %>
</div>