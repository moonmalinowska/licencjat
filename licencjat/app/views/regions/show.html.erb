<p id="notice"><%= notice %></p>
<div class="container-fluid">
<%= render template: "layouts/menu" %>
</div>
<div class="container">


  <div class="col-md-9 col-sm-9">
    <div>
    <p>

      Atrakcje znajdujące się w: <strong class="text-uppercase"><%= @region.name %></strong>
    </p>
    </div>
    <% if @region.attractions.count > 0 %>
    <table class="table table-striped table-hover ">
      <% @region.attractions.each do |attr| %>
          <tbody>

          <tr class="success">

            <td>
              <%= link_to attraction_path(attr) do %>
                  <%= image_tag('300.gif', alt: 'toooor', width: "100px", height: "100px", class:
                                                 "story-img ") %>
              <% end %>
</td>

            <td class="col-md-3"><%= attr.name %></td>
            <td class="col-md-5"><%= attr.description %></td>
            <td class="col-md-2"><%= link_to "Zobacz więcej", attraction_path(attr) %></td>

          </tr>



          </tbody>
      <% end %>
    </table>
    <% else %>

        <div class="alert alert-dismissible alert-danger">

          <h4>Uwaga!</h4>
          <p>W tym regionie nie ma żadnych atrakcji związanych z technologią.</p>
        </div>

    <% end %>

  </div>
  <div class="col-md-3 col-xs-5 ">
    <%= render template: "layouts/right-side" %>
  </div>



<%= link_to 'Edit', edit_region_path(@region) %>
<%= link_to 'Back', regions_path %>
</div>
<div>
  <%= render template: "layouts/footer" %>
</div>