<div class="container">
  <div class="col-md-9 col-sm-7">
    <p>
      <strong class="text-uppercase">

      </strong>
    </p>


    <h2>Lista atrakcji</h2>
    <% if @variety.attractions.count > 0 %>
        <table class="table table-striped table-hover ">

          <tbody>
          <% @variety.attractions.each do |attraction| %>
              <tr class="success">
                <td>
                  <%= link_to attraction_path(attraction) do %>
                      <%= image_tag('300.gif', alt: attraction.name, width: "100px", height: "100px", class:
                                                     "story-img") %>
                  <% end %>
                </td>
                <td><%= attraction.name %></td>
                <td><%= attraction.description %></td>


                <td><%= link_to 'Zobacz wiÄ™cej', attraction_path(attraction) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>

        <div class="alert alert-dismissible alert-danger">

          <h4>Uwaga!</h4>

          <p>Nie posiadamy informacji o tego typu atrakcjach.</p>
        </div>

    <% end %>
    <br>

  </div>

  <div class="col-md-3 col-xs-5 ">
    <%= render template: "layouts/right-side" %>
  </div>

</div>

<%= link_to 'Back', attractions_path %>
</div>
<div class="container-fluid">
  <%= render template: "layouts/footer" %>
</div>
